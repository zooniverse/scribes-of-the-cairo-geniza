@import "../../node_modules/react-select/dist/react-select.css"

// Override default styles from react-select
.search
  background: #fff
  padding-left: 0
  padding-right: 0
  position: relative

  .Select-control
    border: none !important
    box-shadow: none !important
    background: none !important

  .Select-placeholder
    border: none !important
    box-shadow: none !important
    background: none !important

  .Select-menu
    max-height: 174px

.collections-manager
  margin: 4rem 2rem 0 2rem

  hr
    margin: 1rem 0
    width: 100%

  button
    margin-left: 1rem
    max-width: 8rem
    height: 2rem

  &__add
    display: flex
    height: auto !important

    button
      margin-left: auto

  &__create
    display: flex

    input
      border: 1px solid $plum
      padding: 0 0.5rem

  &__instructions
    margin-bottom: 0.25rem

  &__private-toggle
    position: relative

    label
      border: 1px solid $plum
      border-radius: 50%
      cursor: pointer
      height: 0.8rem
      left: 0
      position: absolute
      width: 0.8rem
      top: 0.3rem

    input[type="checkbox"]:checked + label
      background-color: $plum

    input
      visibility: hidden

    span
      color: $plum
      display: block
      line-height: 0.75rem
      margin-left: 1.25rem

  &__error
    color: red
    display: block
    margin-bottom: 0.5rem

  &__input-div
    display: flex
    flex-direction: column
    position: relative
    min-height: 4rem

    button
      &:disabled
        background-image: url('../images/bg-disabled.png')
        cursor: default

    span
      @extends .primary-label
      color: $dust

    .Select, input
      width: 100%

    .Select
      margin-right: 1rem
      z-index: 5
      display: flex
      position: relative

      &.is-open
        width: 58.3%
        position: fixed

    .Select-control
      border: 1px solid $plum
      border-radius: 0
      display: flex
      height: auto

    .Select-arrow-zone, .Select-clear-zone
      right: 0
      position: absolute

    .Select-arrow-zone
      margin: 0.5rem 0.5rem 0 0

    .Select-input
      top: 0
      z-index: 5

    input, .Select-placeholder
      color: $mid-grey
      font-family: $work-sans
      font-size: 1rem
      font-weight: normal
      letter-spacing: 0
      text-transform: none
