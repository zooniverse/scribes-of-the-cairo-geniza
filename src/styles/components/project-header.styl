.project-header
  padding-bottom: 0 !important

  .active-language
    background-color: $sand

  &__link
    text-decoration: none

    &:hover, &:focus
      background-color: $sand

  > div:first-child
    border: 20px solid white
    margin: 2em
    pointer-events: none
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: 5

  nav
    @extend .div-shadow
    background-color: white
    display: flex
    float: right
    padding-right: 0.5rem
    pointer-events: all

    > div:first-child
      display: flex
      position: relative

    a
      display: block
      padding: 1rem

    button
      background: transparent
      border: none
      color: $plum
      cursor: pointer

  &__rtl
    flex-direction: row-reverse

    > div:last-child
      flex-direction: row-reverse

  &__active
    background: $sand

  &__classify
    nav
      background-color: $bisque

    div:first-child
      border: none
      margin-top: 0

  &__buttons
    direction: ltr
    margin: auto

    button
      background-color: transparent
      border: 1px solid transparent
      border-radius: 50%
      cursor: pointer
      height: 1.5rem
      width: 1.5rem

      &:hover, &:focus
        background-color: $sand
