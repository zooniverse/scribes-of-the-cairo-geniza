.workflow-prompt
  background: rgba(255, 255, 255, 0.5)
  cursor: default
  display: flex
  height: 100vh
  left: 0
  position: fixed
  top: 0
  width: 100vw
  z-index: 1000

  &__header
    span
      @extend .primary-label
      display: block
      margin: 0.5rem 1rem

    hr
      margin-bottom: 1rem
      width: 4rem

.workflow-prompt-content
  background-color: $bisque
  margin: auto
  padding: 0em
  width: 15rem
  min-height: 16rem
  box-shadow: 0px 10px 24px -10px rgba(0,0,0,0.29)
  -webkit-box-shadow: 0px 10px 24px -10px rgba(0,0,0,0.29)
  -moz-box-shadow: 0px 10px 24px -10px rgba(0,0,0,0.29)
  display: flex
  flex-direction: column
  justify-content: center

  .workflow-prompt-popup
    padding: 0
    position: relative
    top: 0
    left: 0
    width: 100%
