.toolbar
  @extend .div-shadow
  align-items: center
  background-color: $bisque
  display: flex
  flex-direction: column
  height: 22rem
  justify-content: space-around
  padding: 0 !important
  position: absolute
  top: 12%
  width: 2.5rem

  hr
    border: $light-grey
    margin: 0
    width: 60%

  button
    background-color: transparent
    border: 1px solid transparent
    color: $plum
    cursor: pointer
    display: flex
    height: 1.75rem
    line-height: 1
    padding: 0.25rem
    width: 1.75rem

    &:hover:not(.button-header), &:focus:not(.button-header), &.active
      border-color: $sand
      background-color: $sand
      border-radius: 50%

    span
      color: $dust
      font-family: $work-sans
      font-size: 0.6rem
      font-weight: 600
      letter-spacing: 1px
      margin: auto 0.5rem
      text-transform: uppercase

    span:lang(ar)
      font-size: 0.8rem
      letter-spacing: 0

    i:not(.button-header)
      float: left
      font-style: normal

  &__expanded
    width: 13rem

    hr:first-of-type
      align-self: left
      border: 3px solid $plum
      width: 25%

    hr
      width: 90%

    button
      text-align: left
      width: 95%

      &:hover:not(.button-header), &:focus:not(.button-header), &.active
        border-radius: 1.5rem

    .button-header
      display: flex
      justify-content: space-between

      span
        color: $plum
