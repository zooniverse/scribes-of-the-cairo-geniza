.script-references
  margin: 1rem

  &__header
    border-bottom: 3px solid $plum
    display: flex
    flex-direction: row
    padding-bottom: 1rem

    .secondary-label
      font-size: 0.75rem
      text-transform: uppercase

    .text-link
      background: none
      border: none

    .h1-font
      font-size: 1rem
      line-height: inherit

    > div:first-child
      flex-basis: 40%
      padding-right: 1rem

      div
        display: flex
        justify-content: space-between

    > div:last-child
      border-left: 3px solid $plum
      flex-basis: 60%
      padding-left: 1rem

      span
        font-size: 0.75rem
        line-height: 0.5rem

  &__filter
    div
      margin-top: 0.25rem

    button
      background: none
      border: none
      margin-right: 0.5rem
      padding: 0.25rem 0.5rem

      &:hover, &:focus
        background-color: $sand
        border-radius: 1rem
        color: $plum

  &__letters
    display: flex
    flex-wrap: wrap
    margin: 1rem 0

  &__character
    display: flex
    flex-direction: column
    margin: 0.5rem

    div
      border: 2px solid $plum
      display: inline-block
      height: 3.5rem
      margin-bottom: 0.5rem
      width: 3.5rem

    span
      @extend .tertiary-label
      max-width: 3.5rem
      text-align: center
      text-transform: capitalize
