.tutorial
  margin-top: 4rem

  button
    width: 10.5rem

  > div:last-child
    margin-top: 1rem
    display: flex
    justify-content: space-around

  .step-through-direction
    display: none


  .step-through-pip
    position: relative

    span
      border: 1px solid $plum
      color: transparent
      height: 0.7rem
      width: 0.7rem

    span:after
      content: ''
      position: absolute
      height: 0.4rem
      left: 0.52rem
      top: 0.6rem
      width: 0.4rem
      border-radius: 50%

    input[type="radio"]:checked + span:after
      background-color: $plum

.tutorial-steps
  display: flex
  width: 100%

.tutorial-step
  height: 22rem
  overflow: scroll
  padding: 0 1rem

  &::-webkit-scrollbar
    background-color: $bisque

  &::-webkit-scrollbar-thumb
    background: $dark-grey
    border: 4px solid transparent
    border-radius: 1rem
    background-clip: content-box

  span
    @extend .body-font
    display: block

  img
    display: block
    margin: 0 auto 1rem auto
    max-height: 11rem
    max-width: 20rem
    object-fit: cover
