.selected-annotation
  padding: 1rem

  &__header
    display: flex
    justify-content: space-between
    margin-bottom: 0.5rem

    h2
      margin-bottom: 0.5rem

    .plum-line
      position: absolute
      left: 0
      margin: 0

    .close-button
      padding-top: 0

  .round-toggle
    width: 14rem

    span
      width: 14rem

  &__instructions
    @extend .body-font

    span:first-child
      font-weight: 600

  .input-box
    @extend .body-font
    border: 1px solid $plum
    font-weight: 600
    margin: 1rem 0
    min-height: 2.5rem
    padding: 0 0.5rem
    width: 100%

  &__controls
    display: flex
    justify-content: space-between

    .button
      height: 2.75rem
      margin-left: 0.75rem
      width: 11rem

    div:nth-child(2)
      display: flex
      flex-direction: row

    .text-link
      background: inherit
      margin-top: 0.5rem
      padding: 0

  hr
    margin: 1rem 0

  &__keyboard-div
    > div:first-of-type
      display: flex
      justify-content: space-between

    .secondary-label
      font-size: 0.75rem
      text-transform: uppercase

  &__script-select
    .text-link, button
      font-size: 1rem
      text-transform: uppercase
      background: none
      border: none

    .text-link
      width: 14rem

  &__keyboard
    background-image: url('../images/bg-disabled-secondary.png')
    border: 1px solid black
    display: grid
    height: 16rem
    margin-top: 0.75rem
    width: 100%

.script-options
  background-color: $bisque
  border: 2px solid $plum
  flex-direction: column
  height: 15rem
  margin-left: 1rem
  overflow-y: scroll
  position: absolute

  .active-script-option
    background-color: $sand

  button
    background: none
    border: none
    display: block
    font-family: $work-sans
    font-size: 1rem
    padding: 0.2rem 0.25rem
    text-align: left
    width: 100%

    &:hover, &:focus
      background-color: $sand

.script-options::-webkit-scrollbar
  background-color: $bisque

.script-options::-webkit-scrollbar-thumb
  background: $dark-grey
  border: 4px solid transparent
  border-radius: 1rem
  background-clip: content-box
