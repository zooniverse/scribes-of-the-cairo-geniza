.round-toggle
  position: relative

  label
    border-radius: 50%
    cursor: pointer
    height: 0.5rem
    position: absolute
    width: 0.5rem
    top: 0.5rem

  label:after
    content: ''
    position: absolute
    top: -0.2rem
    bottom: -0.2rem
    left: -0.2rem
    right: -0.2rem
    border: 1px solid $plum
    border-radius: 50%

  input[type="checkbox"]:checked + label, input[type="radio"]:checked + label
    background-color: $plum

  input
    visibility: hidden

  span
    color: $plum
    display: block
    line-height: 0.5rem
    margin: 0 1rem
