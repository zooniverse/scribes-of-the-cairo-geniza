@import "app-theme.styl"
@import "font-styles.styl"

.button
  @extend .div-shadow
  @extend .tertiary-label
  background: $bisque
  border: 3px solid $plum
  border-radius: 0
  cursor: pointer
  font-size: 0.8rem
  padding: 0.75rem 1rem
  text-decoration: none
  width: 12rem

  &:hover, &:focus
    background-color: $dust
    color: $bisque

  &__dark
    background-color: $plum
    color: white

  &__dark-disabled
    background-image: url('../images/bg-disabled.png')
    color: white
    cursor: default

.disabled-workflow
  margin-top: 0 !important

  button
    cursor: default !important
    opacity: 0.5

    &:hover, &:focus
      background: none !important

  span
    @extend .body-font
    display: block
    font-size: 0.5rem
    line-height: 0.5rem
    margin: 0 1rem
    color: $warning
    opacity: 1

.close-button
  @extend .primary-label
  background: inherit
  border: none
  cursor: pointer
  float: right
  margin: 0.5rem 0.25rem 0.25rem 0.25rem
  padding: 0.25rem 0.75em
  border-radius: 1rem

  &:hover
    background: $sand !important
