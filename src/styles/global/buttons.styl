@import "app-theme.styl"
@import "font-styles.styl"

.button
  @extend .tertiary-label
  background: $bisque
  border: 3px solid $plum
  border-radius: 0
  cursor: pointer
  font-size: 0.8rem
  padding: 0.75rem 1rem
  text-decoration: none
  width: 12rem
  box-shadow: 0px 10px 24px -10px rgba(180,180,180,1)
  -webkit-box-shadow: 0px 10px 24px -10px rgba(180,180,180,1)
  -moz-box-shadow: 0px 10px 24px -10px rgba(180,180,180,1)

  &:hover, &:focus
    background-color: $dust
    color: $bisque

  &__dark
    background-color: $plum
    color: white

  &__dark-disabled
    background-image: url('../images/bg-disabled.png')
    color: white
    cursor: default

.disabled-workflow
  margin-top: 0 !important

  button
    cursor: default !important
    opacity: 0.5

    &:hover, &:focus
      background: none !important

  span
    @extend .body-font
    display: block
    font-size: 0.5rem
    line-height: 0.5rem
    margin: 0 1rem
    color: $warning
    opacity: 1
